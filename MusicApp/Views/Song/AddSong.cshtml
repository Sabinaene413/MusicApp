@using MusicApp.Data;
@using MusicApp.Data.Entities
@model List<Artist>

<div class="bg-secondary rounded h-100 p-4">
 <h6 class="mb-4">Adauga Melodie</h6>

<form method="POST" action="/song/AddSong">

    <div class="form-group">

        <label>Name</label>
        <input type="text" name="Name" id="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="selectedartists" class="form-label mt-4">Alege artisti:</label>
        <select id="selectedartists" name="SelectedArtists" class="form-select" fdprocessedid="090xsi" multiple>
            @foreach(var artist in Model)
            {
                <option value ="@artist.Id">@artist.Name</option>
            }
        </select>
    </div>

    <hr />
        <input class="btn btn-outline-info m-2" type="submit" value="Adauga" />
 
</form>
</div>