@using MusicApp.Data
@model MusicTypeDataForAdd

<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Adauga Gen</h6>

    <form method="POST" action="/home/AddMusicType">

        <div class="form-group">

            <label>Name</label>
            <input type="text" name="Name" id="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="selectedartists" class="form-label mt-4">Alege artisti:</label>
            <select id="selectedartists" name="SelectedArtists" class="form-select" fdprocessedid="090xsi" multiple>
                @foreach (var artist in Model.Artists)
                {
                    <option value="@artist.Id">@artist.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="selectedsongs" class="form-label mt-4">Alege melodii:</label>
            <select id="selectedsongs" name="SelectedSongs" class="form-select" fdprocessedid="090xsi" multiple>
                @foreach (var song in Model.Songs)
                {
                    <option value="@song.Id">@song.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="selectedplaylists" class="form-label mt-4">Alege PlayListuri:</label>
            <select id="selectedplaylists" name="SelectedPlayLists" class="form-select" fdprocessedid="090xsi" multiple>
                @foreach (var playlist in Model.PlayLists)
                {
                    <option value="@playlist.Id">@playlist.Name</option>
                }
            </select>
        </div>


        <hr />
        <input class="btn btn-outline-info m-2" type="submit" value="Adauga" />

    </form>
</div>